<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.halong.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".fragment.FragmentActivity" />

        <service android:name=".service.MyService" />

        <receiver android:name=".broadcast.MyReceiver" />

        <provider
            android:name=".content.MyProvider"
            android:authorities="com.example.halong.myapplication.content.MyProvider" />

        <activity android:name=".broadcast.BroadcastActivity" />
        <activity android:name=".service.ServiceActivity" />
        <activity android:name=".content.ContentActivity" />
        <activity android:name=".okhttp.OkhttpActivity" />
        <activity android:name=".pulltorefresh.PulltorefreshActivity" />
        <activity android:name=".database.DatabaseActivity" />
        <activity android:name=".mvp.MvpActivity" />
        <activity android:name=".eventbus.EventbusActivity" />
        <activity android:name=".drawerlayout.DrawerLayoutActivity" />
        <activity android:name=".tabviewpager.TabViewPagerActivity" />
        <activity android:name=".notification.NotificationActivity" />
        <activity android:name=".tablayout.TabLayoutActivity" />
        <activity android:name=".dialog.DialogActivity" />
        <activity android:name=".gson.GsonDemoActivity" />
        <activity android:name=".recyclerview.RecyclerViewDemoActivity" />
        <activity android:name=".cardview.CardViewDemoActivity" />
        <activity android:name=".dagger2.DaggerActivity" />
        <activity android:name=".nanohttpd.NanohttpdActivity" />
        <activity android:name=".textinputlayout.TextInputLayoutActivity" />
        <activity android:name=".actionbardrawertoggle.ActionBarDrawerToggleActivity" />
        <activity android:name=".pulltorefresh.RefreshActivity" />
        <activity android:name=".swiperecyclerview.SwipeRecyclerActivity" />
        <activity android:name=".okhttputils.OkHttpUtilsActivity" />
        <activity android:name=".animation.AnimationActivity"/>
